@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr />
<h3>Student Details</h3>

<h5>Enrollment Date: @Html.DisplayFor(model => model.EnrollmentDate)</h5>
<h5>Current GPA: @Html.DisplayFor(model => model.GPA)</h5>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This student does not belong to any courses</p>
}
else
{
  <h4>Courses the student is enrolled in:</h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{@join.Course.Name}", "Details", "Courses", new {id = join.Course.CourseId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to All Students", "Index")</p>
<p>@Html.ActionLink("Edit Student", "Edit", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Add Course", "AddCourse", new { id = Model.StudentId })</p>

<p>@Html.ActionLink("Delete Student", "Delete", new { id = Model.StudentId })</p>